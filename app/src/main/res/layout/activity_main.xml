<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="nurfitriyani.example.com.nurfitriyani_1202150242_modul2.MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:src="@drawable/shirokuma" />

    <TextView
        android:id="@+id/menuDipilih"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_above="@+id/pilihDine"
        android:text="Pilih Menu"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="167dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/pilihDine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dine in"
            android:textSize="15sp"
            tools:ignore="MissingConstraints"
          />

        <RadioButton
            android:id="@+id/pilihTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Away"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="260dp" />
    </RadioGroup>

    <Button
        android:id="@+id/tombolPesen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_below="@+id/pilihTake"
        android:text="Pesan Sekarang"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="303dp" />


</LinearLayout>
